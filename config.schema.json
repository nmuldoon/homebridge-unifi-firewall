{
  "pluginAlias": "UnifiFirewall",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "unifi": {
        "type": "object",
        "title": "Unifi Controller Settings",
        "properties": {
          "url": {
            "title": "Controller URL",
            "type": "string",
            "required": true
          },
          "username": {
            "title": "Username",
            "type": "string",
            "required": true
          },
          "password": {
            "title": "Password",
            "type": "string",
            "required": true
          },
          "site": {
            "title": "Site ID",
            "type": "string",
            "default": "default",
            "required": true
          },
          "strictSSL": {
            "title": "Validate the SSL Certificate?",
            "type": "boolean",
            "required": true,
            "default": false
          }
        }
      },
      "discovery": {
        "type": "object",
        "title": "üîç Discovery Tools",
        "description": "Use these tools to discover available firewall rules and policies",
        "properties": {
          "help": {
            "title": "Discovery Help",
            "type": "string",
            "readonly": true,
            "default": "Use the npm scripts to discover rules: 'npm run discover-rules <host> <username> <password>' or 'npm run discover' for interactive discovery"
          }
        }
      },
      "rules": {
        "type": "array",
        "title": "Traditional Firewall Rules",
        "description": "Traditional UniFi firewall rules (older rule-based system). Use 'npm run discover-rules' to find available rules.",
        "items": {
          "title": "Firewall Rules",
          "type": "object",
          "properties": {
            "id": {
              "title": "Rule Index",
              "type": "string",
              "required": true,
              "description": "The rule index number from your UniFi Controller (use discovery script to find)",
              "placeholder": "e.g., 2000, 2001, etc."
            },
            "name": {
              "title": "Name",
              "placeholder": "Name to give the switch in Homebridge",
              "type": "string",
              "required": true
            },
            "inverted": {
              "type": "boolean",
              "title": "Invert switch behaviour",
              "required": true,
              "default": false
            }
          }
        }
      },
      "unifi9Policies": {
        "type": "array",
        "title": "UniFi 9 Firewall Policies",
        "description": "UniFi 9 firewall policies (newer policy-based firewall system). Use 'npm run discover' for interactive discovery.",
        "items": {
          "title": "UniFi 9 Policy",
          "type": "object",
          "properties": {
            "id": {
              "title": "Policy ID or Name",
              "type": "string",
              "required": true,
              "description": "The policy ID or name from UniFi 9"
            },
            "name": {
              "title": "Display Name",
              "placeholder": "Name to give the switch in Homebridge",
              "type": "string",
              "required": true
            },
            "inverted": {
              "type": "boolean",
              "title": "Invert switch behaviour",
              "required": true,
              "default": false
            }
          }
        }
      }
    }
  }
}
