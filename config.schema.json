{
  "pluginAlias": "UnifiFirewall",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "unifi": {
        "type": "object",
        "title": "Unifi Controller Settings",
        "properties": {
          "url": {
            "title": "Controller URL",
            "type": "string",
            "required": true
          },
          "username": {
            "title": "Username",
            "type": "string",
            "required": true
          },
          "password": {
            "title": "Password",
            "type": "string",
            "required": true
          },
          "site": {
            "title": "Site ID",
            "type": "string",
            "default": "default",
            "required": true
          },
          "strictSSL": {
            "title": "Validate the SSL Certificate?",
            "type": "boolean",
            "required": true,
            "default": false
          }
        }
      },
      "rules": {
        "type": "array",
        "items": {
          "title": "Firewall Rules",
          "type": "object",
          "properties": {
            "id": {
              "title": "Rule Index (typically 4 digit number)",
              "type": "string",
              "required": true
            },
            "name": {
              "title": "Name",
              "placeholder": "Name to give the switch in Homebridge",
              "type": "string",
              "required": true
            },
            "inverted": {
              "type": "boolean",
              "title": "Invert switch behaviour",
              "required": true,
              "default": false
            }
          }
        }
      },
      "unifi9Policies": {
        "type": "array",
        "title": "UniFi 9 Firewall Policies",
        "description": "UniFi 9 firewall policies (newer policy-based firewall system)",
        "items": {
          "title": "UniFi 9 Policy",
          "type": "object",
          "properties": {
            "id": {
              "title": "Policy ID or Name",
              "type": "string",
              "required": true,
              "description": "The policy ID or name from UniFi 9"
            },
            "name": {
              "title": "Display Name",
              "placeholder": "Name to give the switch in Homebridge",
              "type": "string",
              "required": true
            },
            "inverted": {
              "type": "boolean",
              "title": "Invert switch behaviour",
              "required": true,
              "default": false
            }
          }
        }
      }
    }
  }
}
