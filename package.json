{
  "displayName": "Homebridge Unifi Firewall Switch",
  "name": "homebridge-unifi-firewall",
  "version": "1.2.2",
  "description": "Toggle a UniFi Firewall rule on and off (based on jak's homebridge-unifi-firewall)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/nmuldoon/homebridge-unifi-firewall.git"
  },
  "bugs": {
    "url": "https://github.com/nmuldoon/homebridge-unifi-firewall/issues"
  },
  "engines": {
    "node": ">=14.18.1",
    "homebridge": ">=1.3.5"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "husky install",
    "discover-rules": "npm run build && node dist/discover-rules.js"
  },
  "keywords": [
    "homebridge-plugin",
    "unifi",
    "ubiquiti",
    "usg",
    "usg-unifi"
  ],
  "dependencies": {
    "unifi-client": "^0.11.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "homebridge": "^1.3.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
